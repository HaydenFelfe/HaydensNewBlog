<div class="post">
  <header class="post-header">
    <h1>{{post.title}}</h1>
    <p class="post-meta">Posted by {{post.User.username}} on {{format_date post.createdAt}}</p>
  </header>

  <section class="post-content">
    <p>{{post.body}}</p>
  </section>

  {{#if post.Comments}}
    <div class="comments">
      <h2 class="comments-title">Comments</h2>
      
      <ul class="comment-list">
        {{#each post.Comments}}
          <li class="comment">
            <p class="comment-text">{{body}}</p>
            <p class="comment-meta">&mdash; {{User.username}}, {{format_date createdAt}}</p>
          </li>
        {{/each}}
      </ul>
    </div>
  {{/if}}

  <div class="new-comment">
    <h2 class="new-comment-title">Add New Comment</h2>

    <form id="new-comment-form" class="comment-form">
      <input type="hidden" name="post-id" value="{{post.id}}" />

      <div class="form-group">
        <label class="form-label" for="comment-body">Comment</label>
        <textarea name="comment-body" class="form-input comment-textarea"></textarea>
      </div>

      <button type="submit" class="btn comment-submit-btn">Submit</button>
    </form>
  </div>
</div>

<script src="/js/comment.js"></script>
